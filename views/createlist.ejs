<style>
    form {
  /* Center the form on the page */
  margin: 0 auto;
  width: 500px;
  /* Form outline */
  padding: 1em;
  border: 1px solid #CCC;
  border-radius: 1em;
}

ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

form li + li {
  margin-top: 1em;
}

label {
  /* Uniform size & alignment */
  display: inline-block;
  width: 90px;
  text-align: right;
}

input,
textarea {
  /* To make sure that all text fields have the same font settings
     By default, textareas have a monospace font */
  font: 1em sans-serif;

  /* Uniform text field size */
  width: 300px;
  box-sizing: border-box;

  /* Match form field borders */
  border: 1px solid #999;
}

input:focus,
textarea:focus {
  /* Additional highlight for focused elements */
  border-color: #000;
}

textarea {
  /* Align multiline text fields with their labels */
  vertical-align: top;

  /* Provide space to type some text */
  height: 5em;
}

.button {
  /* Align buttons with the text fields */
  padding-left: 90px; /* same size as the label elements */
}

button {
  /* This extra margin represent roughly the same space as the space
     between the labels and their text fields */
  margin-left: .5em;
}
</style>

<script>
  function addProduct(){
  var forma = document.getElementById('add');
  var li = document.createElement('li');
  var li2 = document.createElement('li');
  var li3 = document.createElement('li');
  var label = document.createElement('label');
  var label = document.createElement('label');
  var label2 = document.createElement('label');
  var label3 = document.createElement('label');
  var input = document.createElement('input');
  var input2 = document.createElement('input');
  var input3 = document.createElement('input');

  input.setAttribute('name', 'product');
  input2.setAttribute('name', 'quantity');
  input3.setAttribute('name', 'price');

  forma.appendChild(li);
  forma.appendChild(label).innerHTML = "Product Name: ";
  forma.appendChild(input);

  forma.appendChild(li2);
  forma.appendChild(label2).innerHTML = "Quntity: ";
  forma.appendChild(input2);

  forma.appendChild(li3);
  forma.appendChild(label3).innerHTML = "Price: ";
  forma.appendChild(input3);

  forma.appendChild(document.createElement('br'));

 
  }
</script>
